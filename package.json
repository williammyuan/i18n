{
  "name": "@kfb/i18n-t",
  "version": "0.1.0",
  "description": "ESLint 规则：检测 React 代码中的中文文本并要求使用 t() 包裹，支持自动修复。",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/你的用户名/仓库名.git"
  },
  "bugs": {
    "url": "https://github.com/你的用户名/仓库名/issues"
  },
  "homepage": "https://github.com/你的用户名/仓库名#readme",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p .",
    "prepare": "npm run build",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "examples:lint:bad": "npm run build && node scripts/run-examples-eslint.cjs --target=bad",
    "examples:lint:good": "npm run build && node scripts/run-examples-eslint.cjs --target=good --strict",
    "examples:check": "npm run examples:lint:bad && npm run examples:lint:good",
    "examples:fix": "npm run build && node scripts/run-examples-eslint.cjs --target=bad --fix"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "react",
    "i18n",
    "typescript"
  ],
  "engines": {
    "node": ">=14"
  },
  "peerDependencies": {
    "eslint": ">=7"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^6.21.0",
    "@typescript-eslint/utils": "^6.21.0",
    "eslint": "^8.57.0",
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "typescript": "^5.4.0"
  }
}

