{
  "compilerOptions": {
    "target": "ES2019",
    "module": "nodenext",
    "lib": ["ES2019"],
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}

